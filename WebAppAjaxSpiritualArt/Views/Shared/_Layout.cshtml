    <script>

        //cerrar sesion
        function cerrarSesion() {
            swal({
                title: "¿Deseas cerrar sesión?",

                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {

                        url = "@Url.Content("~/Principal/CerrarSesion")"

                        $.post(url).done(function (data) {
                            if (data == 1) {
                                window.location.href = "@Url.Content("~/Principal/Index")"
                            }

                        })
                    }
                });
        }

         //cambiar foto de perfil
        $(function () {

            $("#btn-imagen-perfil").click(function () {

                var form_data = new FormData();
                var file_data = $("#archivo").prop("files")[0];

                form_data.append("archivo", file_data);

                form_data.append("archivo", $("#archivo").val());
                form_data.append("IMAGEN", $("#IMAGEN").val());
                form_data.append("CORREO", $("#CORREO").val());
                form_data.append("CLAVE", $("#CLAVE").val());
                form_data.append("CIUDAD", $("#CIUDAD").val());
                form_data.append("PK_ID_ARTISTA", $("#PK_ID_ARTISTA").val());
                form_data.append("PAIS", $("#PAIS").val());
                form_data.append("LOCALIDAD", $("#LOCALIDAD").val());
                form_data.append("DIRECCION", $("#DIRECCION").val());
                form_data.append("FK_TIPO_PLAN", $("#FK_TIPO_PLAN").val());
                form_data.append("NOMBRE_ARTISTA", $("#NOMBRE_ARTISTA").val());
                form_data.append("PRIMER_APELLIDO_ARTISTA", $("#PRIMER_APELLIDO_ARTISTA").val());
                form_data.append("SEGUNDO_APELLIDO_ARTISTA", $("#SEGUNDO_APELLIDO_ARTISTA").val());
                form_data.append("TELEFONO", $("#TELEFONO").val());

                //for (var value of form_data.values()) {
                //    console.log(value);
                //}

                var url = "@Url.Content("~/Principal/CambiarImagen")";


                $.ajax({

                    cache: false,
                    contentType: false,
                    data: form_data,
                    dataType: 'JSON',
                    enctype: 'multipart/form-data',
                    processData: false,
                    method: "POST",
                    url: url,
                    success: function (data) {
                        if (data == 1) {

                            swal({
                                title: "Se cambió la foto correctamente",

                                icon: "success",
                                button: true

                            })
                                .then((willDelete) => {
                                    if (willDelete) {
                                        window.location.reload();
                                    } else {
                                        window.location.reload();
                                    }
                                });






                        } else {
                            swal("Hubo un error :(", "warning");
                        }



                    }

                })


            });
        });

        //publicar biografia
        $(function () {

            $("#btn-biografia").click(function () {

                let biografia = document.getElementById("biografia-text").value;
                if (biografia != "") {


                    var form_data = new FormData();

                    form_data.append("BIOGRAFIATEXTO", $("#biografia-text").val());
                    form_data.append("FK_REGISTRO_ARTISTA", $("#PK_ID_ARTISTA").val());

                    for (var value of form_data.values()) {
                        console.log(value);
                    }

                    var url = "@Url.Content("~/JsonProductos/publicarBiografia")";

                    $.ajax({

                        cache: false,
                        contentType: false,
                        data: form_data,
                        dataType: 'JSON',
                        // enctype: 'multipart/form-data',
                        processData: false,
                        method: "POST",
                        url: url,
                        success: function (data) {
                            if (data == 1) {
                                swal("Tu biografía se ha publicado exitosamente!", "", "success");
                                $("#biografia-text").val("");
                                ConsultarBiografia();

                            } else {
                                swal("Hubo un error :(", "warning");
                            }

                        }

                    })
                } else {
                    document.getElementById("valBio").innerHTML = '<h6 id="valBio">Campo requerido</h6>';
                }
            });

        });

        //funcion que abre modal biografia
        function abrirModalBio() {

            $('#Biografia').modal('toggle')

        }

        //dirigir a mi cuenta
        function vistaCuenta() {
            let id_artista = document.getElementById("PK_ID_ARTISTA").value;

            window.location.href = "@Url.Content("~/Principal/MiCuenta/")" + id_artista;

        }

       //consulta biografia para desabilitar botn publicar
        function ConsultarBiografia2() {
            let fk_artista = document.getElementById("PK_ID_ARTISTA").value;
            fetch("@Url.Content("~/JsonProductos/enviarBiografia/")" + fk_artista)
               .then(function (res) {

                  return res.json();
               })

               .then(function (miJson) {


                      if (miJson[0] != null) {
                          document.getElementById("pk_biografia").value = miJson[0].PK_ID_BIOGRAFIA;
                          document.getElementById("btn-editar-biografia").style.display = "";
                          document.getElementById("btn-biografia").style.display = "none";

                      } else {
                          document.getElementById("btn-biografia").style.display = "";

                      }


               })
        }

        //editar biografia
          $(function () {

              $("#btn-editar-biografia").click(function () {

                  let biografia = document.getElementById("biografia-text").value;

                  if (biografia != "") {

                      var form_data = new FormData();

                      form_data.append("PK_ID_BIOGRAFIA", $("#pk_biografia").val());
                      form_data.append("BIOGRAFIATEXTO", $("#biografia-text").val());
                      form_data.append("FK_REGISTRO_ARTISTA", $("#PK_ID_ARTISTA").val());

                      for (var value of form_data.values()) {
                          console.log(value);
                      }

                      var url = "@Url.Content("~/JsonProductos/EditarBiografia")";

                      $.ajax({

                          cache: false,
                          contentType: false,
                          data: form_data,
                          dataType: 'JSON',
                          // enctype: 'multipart/form-data',
                          processData: false,
                          method: "POST",
                          url: url,
                          success: function (data) {
                              if (data == 1) {
                                  swal("Tu biografía se ha modificado exitosamente!", "", "success");
                                  $("#biografia-text").val("");
                                  ConsultarBiografia();

                              } else {
                                  swal("Hubo un error :(", "warning");
                              }

                          }

                      })
                  } else {
                      document.getElementById("valBio").innerHTML = '<h6 id="valBio">Campo requerido</h6>';
                  }
            });

          });

         function listarNotificaciones() {

             var fk_artista = document.getElementById("PK_ID_ARTISTA").value;


            fetch("@Url.Content("~/JsonProductos/EnviarNotificaciones/")" + fk_artista)

                .then(function (res) {

                    return res.json();
                })

                .then(function (miJson) {
                    document.getElementById("tbody").innerHTML = "";
                    console.log(miJson);
                    let cont = 0;
                    let botonEliminar = 'Descartar';

                    if (miJson[0] != null) {
                        for (let i = 0; i < miJson.length; i++) {

                            cont++


                            document.getElementById("tbody").innerHTML = document.getElementById("tbody").innerHTML +
                                '<tr>' +


                                '<td>' + miJson[i].fecha + '</td>' +
                                '<td>' + miJson[i].nombreCliente + '</td>' +
                                '<td>' + miJson[i].apellidoCliente + '</td>' +
                                '<td>' + miJson[i].correoCliente + '</td>' +
                                '<td>' + miJson[i].telefonoCliente + '</td>' +
                                '<td>' + miJson[i].asunto + '</td>' +
                                '<td>' + miJson[i].mensaje + '</td>' +
                                '<td>' + miJson[i].nombreProducto + '</td>' +
                                '<td><button class="btn-danger" onclick="eliminarNotificacion(' + miJson[i].PK_ID_NOTIFICACION +')">' + botonEliminar + '</button></td>' +
                                '</tr>';

                        }
                    } else {
                        document.getElementById("table").style.display = "none";
                        document.getElementById("sin_notificaciones").style.display = "";

                    }
                    document.getElementById("span-button").innerHTML = cont;
                })
        }


        //eliminar la notifiacion
        function eliminarNotificacion(id) {

            swal({
                title: "Deseas eliminar esta notificación?",
                text: "Una vez eliminada no puedes recuperarla!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                       var form_data = new FormData();
                       var url = "@Url.Content("~/JsonProductos/EliminarNotificacion")";


                       form_data.append("PK_ID_NOTIFICACION", id);

                       $.ajax({

                           cache: false,
                           contentType: false,
                           data: form_data,
                           dataType: 'JSON',

                           processData: false,
                           method: "POST",
                           url: url,
                           success: function (data) {

                               if (data == 1) {
                                   swal("La notificación se ha eliminado con éxito", {
                                       icon: "success",
                                   });
                                   listarNotificaciones();
                               } else {
                                   alert("Error en el sistema, intenta nuevamente.")
                               }
                           }
                       })

                    }
                });



        }


        //abrir noticiaciones
        function abrirNotifi() {
            $('#VerNotificaciones').modal('toggle');
        }
        (ConsultarBiografia2)();
        (listarNotificaciones)();
    </script>

